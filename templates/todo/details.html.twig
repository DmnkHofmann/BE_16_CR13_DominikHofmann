{% extends 'base.html.twig' %}
{% block body %}
          <div class="container">
<div class="row">
           <div class="col-lg-4 col-md-6 col-sm-12 mt-2 mb-2">
            <div class="card" style="width: 45rem;">
            <img src="{{todo.image}}" class="card-img-height">
            <div class="card-body">
               <h5 class="card-title">{{todo.name}}</h5>
               <p class="card-text">Beschreibung: {{todo.description}}</p>
               <p class="card-text">Personenanzahl: {{todo.capacity}}</p>
               <p class="card-text">Email: {{todo.email}}</p>
               <p class="card-text">Telefonnummer: {{todo.phonenumber}}</p>
               <p class="card-text">Adresse: {{todo.address}}</p>
               <p class="card-text">Homepage: {{todo.url}}</p>
               <p class="card-text">Type: {{todo.type}}</p>
               <a href="/edit/{{todo.id}}" class="btn btn-success">Edit</a>
               <a href="/delete/{{todo.id}}" class="btn btn-danger">Delete</a>
            </div>
            </div>
            </div>
           </div>
           </div>
           {% endblock %}
